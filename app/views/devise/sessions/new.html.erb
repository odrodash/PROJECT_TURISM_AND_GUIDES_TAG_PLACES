<div class="container">
  <div class="container-fluid my-5 row">
    <div class="banner-margin col-12 col-md-12 col-lg-8 col-xl-6">
      <div class="bg-white rounded p-3 box-shadow">
        <div class="banner-login">
          <%= cl_image_tag("sign-in_hythsa.jpg", quality: "auto", fetch_format: :auto) %>
        </div>
        <h2 class="text-center text-shadow my-3">User Login</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        class: "text-shadow",
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        class: "text-shadow",
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in", class: "btn btn-outline-primary" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
