<div class="container">
  <div class="container-fluid my-5 row">
    <div class="banner-margin col-12 col-md-12 col-lg-8 col-xl-6">
      <div class="bg-white rounded p-3 box-shadow">
        <div class="banner-login">
          <%= cl_image_tag("edit-password_llit9x.jpg", quality: "auto", fetch_format: :auto) %>
        </div>
        <h2 class="text-shadow my-3 text-center">Forgot your password?</h2>

        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email,
                        required: true,
                        class: "text-shadow",
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Send me reset password instructions", class: "btn btn-outline-primary my-3" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
