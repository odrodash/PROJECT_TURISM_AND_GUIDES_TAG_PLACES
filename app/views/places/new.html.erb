<% collection = ["Argentina", "Brasil", "Bolivia", "Chile", "Perú", "Colombia", "Puerto Rico", "Costa Rica", "Mexico", "Ecuador","Guatemala", "Uruguay", "Paraguay", "Honduras", "Cuba", "El Salvador", "Nicaragua", "Panamá","Venezuela"] %>
<div class="container py-5 my-5">
  <div class="row">
    <div class="col-12 col-sm-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3 class="text-shadow">Add place what your visit</h3>
        <%= simple_form_for @place do |f| %>
          <%= f.input :place, placeholder: 'Enter a name the place what your visit', class: "text-shadow" %>
          <%= f.input :country, as: :select, collection: collection, required: true, class: "text-shadow" %>
          <%= f.input :description, placeholder: 'Enter description min 60 letters max 1000', class: "text-shadow" %>
          <%= f.input :rating, collection: (1..4), placeholder: 'Enter your rating the place' %>
          <%= f.input :photo, as: :file %>
          <%= f.submit class: 'btn btn-outline-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
